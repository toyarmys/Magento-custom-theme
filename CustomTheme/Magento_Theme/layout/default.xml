<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="header.container">
            <container 
            name="top.header.saleoff"
            htmlTag="div"
            htmlClass="header_top_saleoff"
            before="-">
                <block class="Magento\Framework\View\Element\Template" name="saleoff" template="Magento_Theme::saleoff.phtml"/>
            </container>
            <referenceContainer name="header.panel">
            <container 
            name="header.top.intro.text" 
            before="-" 
            htmlTag="div" 
            htmlClass="top_intro_text">
                <block class="Magento\Framework\View\Element\Template" name="intro.text" template="Magento_Theme::intro_text.phtml" />
            </container>
            </referenceContainer>
        </referenceContainer>
        <referenceContainer name="footer">
        <container 
            name="footer.content" 
            before="-" 
            htmlTag="div" 
            htmlClass="footer_content">
            <container 
            name="footer.logo.and.info"
            htmlTag="div"
            htmlClass="logo-info-footer">
                <block class="Magento\Framework\View\Element\Template" name="footer.logo" template="Magento_Theme::footer.phtml"/>
            </container>
            <block class="Magento\Framework\View\Element\Template" name="footer.popular.tag" template="Magento_Theme::footer-popular-tag.phtml"/>
        </container>
        </referenceContainer>
        <referenceBlock name="footer_links" remove="true" />
    </body>
</page>